<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="dialog_anim">
        <item name="android:windowEnterAnimation">@anim/zoom_in</item>
        <item name="android:windowExitAnimation">@anim/zoom_out</item>
    </style>

    <style name="theme_dialog" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="holo_font_l">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="holo_font_m">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="holo_font_h">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="holo_font_xh">
        <item name="android:textSize">22sp</item>
    </style>

</resources>